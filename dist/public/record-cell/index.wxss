/* dist/public/recordcell/index.wxss */
@import "/app.wxss";
.infor-box{
  margin: 20rpx 25rpx;
  padding: 30rpx;
  border-radius:20rpx;
  color: #666;
  font-size: 26rpx;
}
.nameImg{
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin: 10rpx 20rpx 0 0;
}
.top{
  display: flex;
  justify-content: space-between;
}
.name-title{
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.name-middle .shop{
  padding: 4rpx 6rpx;
  background: #ff3838;
  color: #fff;
  font-size: 23rpx;
  border-radius: 6rpx;
  margin-left: 15rpx;
  font-weight: normal;
}
.name-msg{
  font-size:22rpx;
  color:#999;
}
.views{
  font-size: 26rpx;
  color: #999;
  margin-top: 7rpx;
}
.vheight{
  height: 60rpx;
  line-height: 60rpx;
}
.phone{
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}
.mar_r_30{
  margin-right: 30rpx;
}
.site{
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.btn-cancel{
  border-radius: 50rpx;
  border:1rpx solid #FF3838;
  height: 50rpx;
  line-height: 50rpx;
}
.grey{
  border: 1rpx solid #999;
}