
.title{
  font-size: 30rpx;
  margin: 0 0 20rpx;
  font-size: 30rpx;
}
.main{
  background-color: #fff;
  padding: 0 20rpx 50rpx;
}
.area{
  background-color: #F7F7F7;
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.image-content{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  border-bottom: 1px solid #eee;
  margin-bottom: 20rpx;
}
.image-content > view{
  margin-right: 2%;
  margin-bottom: 15rpx;
  border: 1px solid #eee;
  width: 32%;
  height: 160rpx;
  position: relative;
}
.image-content > view:nth-of-type(3n){
  margin-right: 0;
}
.image-content > view:hover .delete{
  display: block;
}
.up-image{
  width: 32%;
  height: 160rpx;
  text-align: center;
  line-height: 160rpx;
  border: 1px solid #eee;
  font-size: 90rpx;
  background-color: #DDDDDD;
  color: #999;
}
.inputs{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}
.number{
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  color: #999;
}
.delete{
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  width: 40rpx;
  height: 40rpx;
  display: none;
}
.subimit{
  margin: 50rpx 0 0;
}