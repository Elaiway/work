/* pages/mall/index.wxss */

.mall-main {
  margin: -40rpx 30rpx 30rpx;
}

.mall-category {
  background: #fff;
  overflow: hidden;
  border-radius: 20rpx;
  position: relative;
  z-index: 1;
}

.mall-title {
  height: 88rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  background-position:center;  /** 居中*/
    background-repeat:no-repeat; /** 不重复*/
    background-image:url(data:image/png;base64,);
  background-size: 100% 100%;
}
.mall-tj{
  position: relative;
  white-space: nowrap;
  display: block;
  padding: 0rpx 0rpx 30rpx 30rpx;
}
.mall-tjcellv{
  display: inline-block;
}
.mall-tjcell{
  max-width: 220rpx;
  min-width: 220rpx;
  padding: 20rpx 0rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #eee;
  box-shadow: 0 2rpx 4rpx 0 #ddd;
}
.mall-tjcell .img{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}