@import "/app.wxss";
.img-head {
  width: 30px;
  height: 30px;
  background-color: #eeeeee;
  border-radius: 50%
}

.zan {
  background-color: #fff;
  padding:20rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}


.zan-name-left view {
  margin-left: 20rpx;
  font-size: 28rpx;
}

.zan-name-right {
  border: 1px solid #EE4B47;
  color: #EE4B47;
  font-size: 24rpx;
  padding: 5rpx 20rpx;
  border-radius: 50rpx;
}
.cur-zan-name-right{
  border: 1px solid #999 !important;
  color: #999 !important;
}
.zan-intro {
  margin-top: 10rpx;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.pic-list{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}
.pic-list-detail{
  width: 32%;
  height: 240rpx;
  margin:0 2% 2% 0;
  overflow: hidden;
}
.pic-list-detail:nth-of-type(3n){
  margin-right: 0;
}
.zan-number{
  width: 100%;
}
.dingwei{
  width: 50%;
}