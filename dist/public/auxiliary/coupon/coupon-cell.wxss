/* dist/public/auxiliary/coupon/coupon-cell.wxss */
@import "/app.wxss";

.mar-lrb {
  margin: 0 30rpx 30rpx 30rpx;
  border-radius: 20rpx;
}

.copimg {
  width: 140rpx;
  height: 140rpx;
  background: #ddd;
}

.coup {
  min-width: 180rpx;
  border-radius: 0 20rpx 20rpx 0;
}

.coup::before {
  border-left: 12rpx dotted #fff;
  content: " ";
  position: absolute;
  height: 100%;
  left: -4rpx;
  top: 0;
}

.coup::after {
  content: " ";
  position: absolute;
  height: 24rpx;
  width: 24rpx;
  border-radius: 50%;
  background: #f4f4f4;
  right: -12rpx;
  top: 50%;
  margin-top: -12rpx;
}

.tmar {
  margin: 30rpx 30rpx 20rpx 30rpx;
}

.mbtn {
  min-width: 170rpx;
  padding: 7rpx 0;
  border-radius: 30rpx;
  border: 4rpx solid #e10c0c;
}

.mar_tb_14 {
  margin: 14rpx 0;
}

.ba-lg-f4ee {
  background: linear-gradient(90deg, #f83144 0%, #ed4e6e 300%);
}

.ba-lg-3f6f {
  background: linear-gradient(90deg, #3699ff 0%, #61afff 300%);
}

.ba-lg-f1f8 {
  background: linear-gradient(90deg, #f7b821 0%, #ffce58 300%);
}
